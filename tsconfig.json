{
    // https://www.typescriptlang.org/docs/handbook/migrating-from-javascript.html
    "ts-node": {
      "files": true,
    },
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "ES2015",
      "declaration": true,
      "module": "CommonJS",
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "sourceMap": false,
      "esModuleInterop": true, // for FormData
  
      // Disable later
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [ "./src/**/*" ]
}
  